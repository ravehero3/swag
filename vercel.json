{
  "version": 2,
  "builds": [
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/index.ts"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "server/public/uploads/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1",
      "check": true
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "index.html"
    }
  ]
}
